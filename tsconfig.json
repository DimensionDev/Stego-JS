{
  "compilerOptions": {
    "lib": ["ES2015", "ESNext.Array", "DOM"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "cjs"
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
